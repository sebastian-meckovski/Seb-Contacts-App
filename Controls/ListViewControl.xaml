<UserControl x:Class="SebContactsApp.Controls.ListViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SebContactsApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200">
    <Grid>
        <DockPanel VerticalAlignment="Center">
            <TextBlock x:Name="nameTextBlock" Text="Name" Margin="3" FontSize="20"/>
            <TextBlock x:Name="surnameTextBlock" Text="Surname" Margin="3" FontSize="20"/>
        </DockPanel>    
    </Grid>
</UserControl>
